{
  "name": "bergen",
  "version": "0.1.17",
  "private": true,
  "url": "https://github.com/kkarimi/bergen",
  "scripts": {
    "android": "react-native run-android",
    "macos": "react-native run-macos",
    "macos-fast": "./start-macos-fast.sh",
    "pod-install": "cd macos && bundle install && bundle exec pod install",
    "deps": "yarn pod-install --repo-update",
    "build": "./scripts/build.sh",
    "clean-build": "./scripts/clean-build.sh",
    "fix-signing": "./scripts/fix-unsealed-contents.sh",
    "super-fix": "./scripts/super-fix-signing.sh",
    "nuke-and-rebuild": "./scripts/nuke-and-rebuild.sh",
    "install-cert": "./scripts/install-certificate.sh",
    "release": "./scripts/release.sh --bump-type patch",
    "release:major": "./scripts/release.sh --bump-type major",
    "release:minor": "./scripts/release.sh --bump-type minor",
    "release:nobuild": "./scripts/release.sh --bump-type patch --no-build",
    "release:cask": "./scripts/release.sh --bump-type patch --publish-cask",
    "release:cask:minor": "./scripts/release.sh --bump-type minor --publish-cask",
    "release:cask:major": "./scripts/release.sh --bump-type major --publish-cask",
    "publish-cask": "./scripts/publish-cask.sh",
    "appstore-build": "./scripts/app-store-build.sh",
    "appstore-release": "./scripts/app-store-release.sh",
    "create-homebrew-tap": "./scripts/create-homebrew-tap.sh",
    "screenshots": "./scripts/generate-app-store-screenshots.sh",
    "lint": "biome check --write .",
    "lint:fix": "biome check --fix --unsafe .",
    "start": "react-native start --host 127.0.0.1",
    "test": "jest"
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "^1.16.2",
    "prism-react-renderer": "^2.4.1",
    "react": "18.3.1",
    "react-native": "0.76.0",
    "react-native-fs": "^2.20.0",
    "react-native-macos": "^0.76.6",
    "react-native-webview": "^13.13.4",
    "simple-markdown": "^0.7.3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@biomejs/biome": "^1.9.4",
    "@react-native-community/cli": "15.0.0-alpha.2",
    "@react-native-community/cli-platform-android": "15.0.0-alpha.2",
    "@react-native-community/cli-platform-ios": "15.0.0-alpha.2",
    "@react-native/babel-preset": "0.76.0",
    "@react-native/metro-config": "0.76.0",
    "@react-native/typescript-config": "0.76.0",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "jest": "^29.6.3",
    "react-test-renderer": "18.3.1",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
